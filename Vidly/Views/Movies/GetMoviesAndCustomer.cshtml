@model Vidly.ViewModels.MovieCustomerViewModel
@{
    ViewBag.Title = "GetMoviesAndCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetMoviesAndCustomer</h2>
<h3>@Model.movie.Title</h3>


<!--Using Razor Syntax-->

@if (Model.Customers.Count == 0)
{
    <h4>No Customer is interested in this movie</h4>
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}


